{% extends "site/components/_base.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="container my-5">
    <h1 class="text-center mb-4">{{ title }}</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="card shadow-sm mb-4">
                <div class="card-body p-3">
                    {% if mapDonnees is not empty %}
                        {{ ux_map(mapDonnees, { 'data-controller': 'mymap', 'controller_id': false, style: 'height: 600px; border: 2px solid black; border-radius: 8px;' }) }}
                    {% else %}
                        <div class="alert alert-warning text-center" role="alert">
                            <strong>Aucun technicien trouvé.</strong> Veuillez ajuster vos critères de recherche.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-10">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-4">Filtrer les techniciens télématiques</h3>
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-12 col-lg-4 mb-4">
                                <div class="p-3 border border-primary rounded-lg h-100 d-flex flex-column" style="background-color: #e3f2fd;">
                                    <h5 class="w-100 text-primary">Formations</h5>
                                    {% for child in form.formations %}
                                        <div class="form-check my-1">
                                            {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="col-12 col-lg-4 mb-4">
                                <div class="p-3 border border-secondary rounded-lg h-100 d-flex flex-column" style="background-color: #f1f8e9;">
                                    <h5 class="w-100 text-secondary">Fonctions</h5>
                                    {% for child in form.fonctions %}
                                        <div class="form-check my-1">
                                            {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="col-12 col-lg-4 mb-4">
                                <div class="p-3 border border-info rounded-lg h-100 d-flex flex-column" style="background-color: #e1f5fe;">
                                    <h5 class="w-100 text-info">Véhicules</h5>
                                    {% for child in form.vehicles %}
                                        <div class="form-check my-1">
                                            {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary btn-lg me-3">Afficher la carte</button>
                            <a href="{{ path('app_map_technicians_telematique') }}" class="btn btn-warning btn-lg">Réinitialiser</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}