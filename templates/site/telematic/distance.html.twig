{% extends 'site/components/_base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="container my-5">
    
    <div class="row justify-content-center mb-4">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center bg-primary text-white py-3">
                    <h5 class="my-1">
                        <i class="fas fa-search-location me-2"></i> Rechercher les télématiciens à proximité
                    </h5>
                </div>
                
                <div class="card-body p-0">
                    <div class="d-grid gap-2">
                        {% if isSearchDone %}
                        <button class="btn btn-secondary rounded-0 rounded-bottom" type="button" data-bs-toggle="collapse" data-bs-target="#searchFormCollapse" aria-expanded="false" aria-controls="searchFormCollapse">
                            <span class="collapsed-text"><i class="fas fa-filter me-2"></i> Modifier la recherche</span>
                            <span class="expanded-text d-none"><i class="fas fa-filter me-2"></i> Fermer les options</span>
                        </button>
                        {% endif %}
                    </div>
                    <div class="collapse {% if not isSearchDone %}show{% endif %}" id="searchFormCollapse">
                        {{ form_start(formSearchByCity, {'attr': {'class': 'd-flex flex-column align-items-center p-4'}}) }}
                            <div class="w-100 mb-3">
                                {{ form_label(formSearchByCity.city,'Ville', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(formSearchByCity.city, {'attr': {'class': 'form-control', 'placeholder': 'Entrez une ville'}}) }}
                            </div>
                            <div class="w-100 mb-4">
                                <label class="form-label">Formation(s):</label>
                                <div class="row g-2 mt-2">
                                    {% for child in formSearchByCity.formations %}
                                        <div class="col-6">
                                            <div class="form-check">
                                                <input type="checkbox"
                                                    id="{{ child.vars.id }}"
                                                    name="{{ child.vars.full_name }}"
                                                    value="{{ child.vars.value }}"
                                                    {{ child.vars.checked ? 'checked' : '' }}
                                                    class="btn-check"
                                                    autocomplete="off">
                                                <label class="btn btn-outline-primary w-100" for="{{ child.vars.id }}">
                                                    {{ child.vars.label }}
                                                </label>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {% do formSearchByCity.formations.setRendered() %}
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg me-2" id="submit-button">
                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                    <span class="button-text"><i class="fas fa-search me-2"></i> Rechercher</span>
                                </button>
                                <a href="{{ path('app_search_distance_for_telematic_assistance') }}" class="btn btn-warning btn-lg"><i class="fas fa-undo me-2"></i> Réinitialiser</a>
                            </div>
                        {{ form_end(formSearchByCity) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if isSearchDone %}
        {% if datas | length > 0 %}
            <div class="row justify-content-center">
                <div class="col-12 col-xl-10">
                    <div class="card shadow-lg mb-4">
                        <div class="card-header bg-success text-white py-3">
                            <h5 class="my-1"><i class="fas fa-list-ul me-2"></i> Résultats de la recherche ({{ datas | length }} centre(s) trouvé(s))</h5>
                        </div>
                        <div class="card-body p-0 table-responsive">
                            <table class="table text-center align-middle table-striped mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="py-3">Centre</th>
                                        <th class="py-3">Distance (ALLER)</th>
                                        <th class="py-3">Temps de trajet (ALLER)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for data in datas %}
                                        {% set dureeEnSecondes = data.duration %}
                                        {% set hours = (dureeEnSecondes / 3600) | round(0, 'floor') %}
                                        {% set minutes = (dureeEnSecondes / 60) % 60 | round(0, 'floor') %}
                                        <tr>
                                            <td class="text-start ps-4">
                                                <i class="fas fa-store me-2 text-muted"></i>
                                                <span class="fw-bold">{{ data.shop.cm }}</span> - {{ data.shop.name }}
                                            </td>
                                            <td>
                                                <i class="fas fa-route me-2 text-success"></i>
                                                <span class="fw-bold">{{ (data.distance / 1000) | round(1) }}</span> KMS
                                            </td>
                                            <td>
                                                <i class="fas fa-clock me-2 text-info"></i>
                                                {% if hours > 0 %}
                                                    <span class="fw-bold">{{ hours }}</span> H
                                                {% endif %}
                                                <span class="fw-bold">{{ minutes }}</span> min
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-12 col-xl-10">
                    <div class="card shadow-lg mb-5">
                        <div class="card-header bg-info text-white py-3">
                            <h5 class="my-1"><i class="fas fa-map me-2"></i> Carte des résultats</h5>
                        </div>
                        <div class="card-body p-0">
                            {{ ux_map(map, {'data-controller': 'mymap', 'controller_id': false, style: 'height: 650px; border-radius: 0 0 8px 8px;'}) }}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="alert alert-info text-center shadow-lg" role="alert">
                        <i class="fas fa-info-circle me-2"></i> Aucun résultat trouvé pour votre recherche.
                    </div>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="alert alert-info text-center shadow-lg" role="alert">
                    <i class="fas fa-info-circle me-2"></i> Veuillez choisir une ville et une formation pour lancer la recherche.
                </div>
            </div>
        </div>
    {% endif %}

</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const submitButton = document.getElementById('submit-button');
            const collapseElement = document.getElementById('searchFormCollapse');
            const collapsedText = document.querySelector('.collapsed-text');
            const expandedText = document.querySelector('.expanded-text');
            
            // Check if the form and button exist
            if (form && submitButton) {
                // Handle the button state on form submit
                form.addEventListener('submit', function(event) {
                    submitButton.querySelector('.spinner-border').classList.remove('d-none');
                    submitButton.querySelector('.button-text').classList.add('d-none');
                    submitButton.disabled = true;
                });
            }

            // Handle button text change for collapse
            if (collapseElement && collapsedText && expandedText) {
                collapseElement.addEventListener('show.bs.collapse', function () {
                    collapsedText.classList.add('d-none');
                    expandedText.classList.remove('d-none');
                });
                collapseElement.addEventListener('hide.bs.collapse', function () {
                    collapsedText.classList.remove('d-none');
                    expandedText.classList.add('d-none');
                });
            }
        });
    </script>
{% endblock %}