{% extends 'site/components/_base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <div class="row g-0 justify-content-center align-items-stretch py-5">
		<h1 class="col-12 text-center my-5">{{ title }}</h1>
        <div class="list-group col-11 col-sm-10 col-md-9 col-lg-7 mx-auto">
            {% for route in routes %}
                <a href="{{ route.url }}" class="list-group-item list-group-item-action"><i class="fa-solid fa-map-location-dot"></i> {{ route.name }}</a>
            {% endfor %}
        </div>
    </div>
    
{% endblock %}
