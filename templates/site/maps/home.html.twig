{% extends 'site/components/_base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <div class="row g-0 justify-content-center align-items-stretch py-5">
        <div class="col-11 col-sm-8 col-md-5 p-5 d-flex justify-content-center align-items-center">
            <img src="{{ asset('images/logo.png') }}" alt="Logo ErmMaps" class="img-fluid">
        </div>
        <div class="col-11 col-sm-8 col-md-6 p-1 shadow-lg d-flex flex-wrap justify-content-center align-items-center h5">
                {% for theme in routes %}
            <div class="list-group col-11 mb-3">
                    {{ theme.title }}
                    {% for route in theme.routes %}
                        {% set icon = 'fa6-solid:map-location-dot' %}
                        {% if route.icon is defined %}
                            {% set icon = route.icon %}
                        {% endif %}
                        <a href="{{ route.url }}" class="list-group-item list-group-item-action">{{ ux_icon(icon,  {height: '16px', width: '16px', 'aria-hidden': true}) }} {{ route.name }}</a>
                    {% endfor %}
            </div>
                {% endfor %}
        </div>
    </div>
    
{% endblock %}
