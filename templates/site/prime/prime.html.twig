{% extends "site/components/_base.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="container my-5">
    <h1 class="text-center mb-4">{{ title }}</h1>

    <div class="row justify-content-center">
        {% if primeByPerson is not null %}
            <div class="col-12 col-md-10 col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white text-center">
                        <h5 class="my-1">Résultat du calcul</h5>
                    </div>
                    <div class="card-body p-4 text-center">
                        <h4 class="text-warning">
                            Prime par personne : {{ primeByPerson|number_format(2, '.', ',') }} €
                            <span class="small fst-italic fw-light d-block mt-1">(pour 100% de présence)</span>
                        </h4>
                        
                        <hr class="my-4">
                        
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-8">
                                <h6 class="text-muted mb-3">Informations pour le prochain palier</h6>
                                <table class="table table-sm table-striped mb-0">
                                    <tbody>
                                        <tr>
                                            <td class="text-start"><strong>PS Totale :</strong></td>
                                            <td class="text-end">{{ infosForNextLevel.nextPsForNextLevel }}</td>
                                        </tr>
                                        <tr>
                                            <td class="text-start"><strong>Reste à faire :</strong></td>
                                            <td class="text-end">{{ infosForNextLevel.psDifference }}</td>
                                        </tr>
                                        <tr>
                                            <td class="text-start"><strong>Prime par personne :</strong></td>
                                            <td class="text-end">
                                                Mini: {{ infosForNextLevel.startPrime|number_format(2, '.', ',') }} € - 
                                                Max: {{ infosForNextLevel.endPrime|number_format(2, '.', ',') }} €
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center bg-light">
                        <a class="btn btn-primary" href="{{ path('app_prime') }}">Faire un autre calcul</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white text-center">
                        <h5 class="my-1">Estimation de la prime par personne</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'd-flex flex-column align-items-center'}}) }}
                            <div class="w-100 mb-3">
                                {{ form_label(form.fullPs, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.fullPs, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.fullPs) }}
                            </div>
                            <div class="w-100 mb-4">
                                {{ form_label(form.divider, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.divider, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.divider) }}
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg">Calculer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm mb-5">
                <div class="card-header bg-dark text-white text-center">
                    <h5 class="my-1">Tableau des paliers de prime</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr class="bg-light">
                                    <th scope="col" class="text-center">PS de départ</th>
                                    <th scope="col" class="text-center">PS de fin</th>
                                    <th scope="col" class="text-center">Pourcentage</th>
                                    <th scope="col" class="text-center">PS à faire</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for primeLevel in primeLevels %}
                                    {% set highlightClass = '' %}
                                    {% if primeLevelFromCalc is not null and primeLevelFromCalc.start == primeLevel.start %}
                                        {% set highlightClass = 'table-secondary' %}
                                    {% endif %}
                                    <tr class="{{ highlightClass }}">
                                        <td class="text-center">{{ primeLevel.start }}</td>
                                        <td class="text-center">{{ primeLevel.end }}</td>
                                        <td class="text-center">{{ primeLevel.percentage / 100 }}</td>
                                        <td class="text-center">
                                            {% if primeLevel.start > 0 %}
                                                {{ primeLevel.start * divider|default(0) | number_format(0, '', ' ') }}
                                            {% else %}
                                                Calcul en attente...
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}